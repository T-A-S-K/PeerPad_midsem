extends layout.pug



block link
  p.sharing-link
    a.link(id='myLink' target="_blank") Sharing Link
    span(id="myLinkInput" class="aside disappear")
    span(class="copy-container" data-tooltip="Copy to Clipboard")
      i(data-feather="copy" class="copy-link" color="rgb(232, 17, 17)")
    span(class="copy-status") Copied!
    form(id="join" action="/add/"+id  method="post")
        input(type="text", name="email", value="", placeholder="Join document")
        br
        div 
          input(type="submit" value="Add")
 

block scripts
  script(src='js/main.js')
